<%- include('../cmsPartial/headCms') %>
<%- include('../cmsPartial/cmsNav') %>

<form action="/user/login" method="post" class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
              <% if (error) { %>
                <p class="text-danger"><%= error %></p>
              <% } %>
                  <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Email</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Your Email" name="email">
                  </div>
                    <label for="exampleFormControlTextarea1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleFormControlInput1" name="password" placeholder="Your password">
                  </div>
                  <div class="text-center">
                    <button class="btn btn-primary mt-4" type="submit">Submit</button>
                  </div>
            </div>
        </div>
    </div>
</form>
<p class="text-center mt-3">Not have account? click <a href="/user/register">Register</a></p>

