<%- include('../cmsPartial/headCms') %>
<%- include('../cmsPartial/cmsNav') %>
  <% name %>
  <% count %>
  <div class="container mx-auto">
    <div class="row">
      <div class="col-md-8">
        <div> 
          <canvas id="myChart"></canvas>
          <p id="nameCategory" hidden><%= name %></p>
          <p id="countCategory" hidden><%= count %></p>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script>
    const ctx = document.getElementById('myChart');
    const name = document.getElementById('nameCategory').innerHTML
    const count = document.getElementById('countCategory').innerHTML
    // console.log(count)

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: name.split(",") , //nama category
        datasets: [{
          label: 'The amount of Courses',
          data: count.split(","), // count nya
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>
<%- include('../cmsPartial/cmsFoot') %>